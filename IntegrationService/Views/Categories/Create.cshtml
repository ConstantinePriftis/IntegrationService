@model IntegrationService.Models.Categories.Category

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card-body">

    <div class="row">
        <div class="col-md-6">
            <h2 class="card-title">Create</h2>
            <h6 class="card-subtitle mb-2">Category</h6>
        </div>
        <div class="col-md-6 text-end"><a asp-action="Index" class="return-link"><i class="icon-arrow-left-small"></i> <span>Back to List</span></a></div>
    </div>

    <div class="row">
        <div class="col mt-20 mb-50">


            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Code" class="control-label"></label>
                    <input asp-for="Code" class="form-control" />
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Level" class="control-label"></label>
                    <input asp-for="Level" class="form-control" />
                    <span asp-validation-for="Level" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
              @*  <div class="form-group mt-10">
                    <label asp-for="CreatedOn" class="control-label"></label>
                    <input asp-for="CreatedOn" class="form-control" />
                    <span asp-validation-for="CreatedOn" class="text-danger"></span>
                </div>
                <div class="form-group mt-10">
                    <label asp-for="ModifiedOn" class="control-label"></label>
                    <input asp-for="ModifiedOn" class="form-control" />
                    <span asp-validation-for="ModifiedOn" class="text-danger"></span>
                </div>*@
                <div class="form-group form-check  mt-20 mb-20">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="Enabled" /> @Html.DisplayNameFor(model => model.Enabled)
                    </label>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="main-btn primary-btn btn-hover " />
                </div>
            </form>



        </div><!--/col-->
    </div><!--/row-->
</div><!--/CARD-BODY-->




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
