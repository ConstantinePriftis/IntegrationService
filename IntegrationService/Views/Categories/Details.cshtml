@model IntegrationService.Models.Categories.Category

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card-body">

    <div class="row">
        <div class="col-md-6">
            <h2 class="card-title">Κατηγορίες</h2>
            <h6 class="card-subtitle mb-2">Λεπτομέρειες</h6>
        </div>
        <div class="col-md-6 text-end"><a asp-action="Index" class="return-link"><i class="icon-arrow-left-small"></i> <span>Επιστροφή</span></a></div>
    </div>

    <div class="row">
        <div class="col mt-20 mb-50">

            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Code)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Code)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Level)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Level)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Description)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Description)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.CreatedOn)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.CreatedOn)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ModifiedOn)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ModifiedOn)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Enabled)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Enabled)
                </dd>
            </dl>
            <hr style="margin: 9px 0"
                />
            <div class="form-group">
                <ul class="filter-btn-group f-14">
                    <li>
                        <a class="main-btn primary-btn-outline btn-hover d-flex align-items-center" style="gap:5px;" asp-action="Edit" asp-route-id="@Model?.Id">
                            <i class="icon-edit"></i>Επεξεργασία</a>
                    </li>
                </ul>
            </div>
        </div><!--/col-->
    </div><!--/row-->
</div><!--/CARD-BODY-->





















