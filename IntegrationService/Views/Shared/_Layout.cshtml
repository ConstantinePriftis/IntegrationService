@inject IHttpContextAccessor HttpContextAccessor
<!doctype html>
<html lang="el">
<head>

    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>Σκλαβενίτης | Διαχείρηση Ηλεκτρονικών Συλλογών</title>
    <meta name="description" content="Σκλαβενίτης - Διαχείρηση Ηλεκτρονικών Συλλογών">
    <meta name="title" content="Σκλαβενίτης | Διαχείρηση Ηλεκτρονικών Συλλογών">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="robots" content="noindex,nofollow">

    <link rel="shortcut icon" href="~/icons/favicon.ico" />
    <link rel="apple-touch-icon" href="~/icons/icon-180x180.png" sizes="180x180">


    <link rel="preload" type="font/woff2" href="~/fonts/carlito/carlito-v3-greek-ext_latin-regular.woff2" as="font" crossorigin />
    <link rel="preload" type="font/woff2" href="~/fonts/carlito/carlito-v3-greek-ext_latin-700.woff2" as="font" crossorigin />




    @if (IsSectionDefined("head"))
    {
        @await RenderSectionAsync("head", required: false)
    }



    <link rel="stylesheet" href="~/css/skeleton/bundle.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/jquery-ui_1.13.0.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/css_select2_4.1.0.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/skeleton/app.css" asp-append-version="true" />



    <!-- Jquery -->
    <script src="~/js/skeleton/lib/jQuery.v3.6.0-jQuery.UI.v1.13.0.js"></script>
    <script src="~/js/skeleton/lib/datepicker-el.js"></script>


</head>





<body class="@ViewBag.BodyClass" >

    <!-- HEADER
    ///////////////////////////////////////////////////////////////////// -->
    <header class="header">
        <div class="container-fluid">
            <div class="row align-items-center">
                <div class="col-lg-5 col-md-5 col-6">
                    <div class="header-left d-flex align-items-center">

                        <div class="menu-toggle-btn mr-20">
                            <button id="menu-toggle" aria-label="menu toggle" class="main-btn secondary-btn btn-hover">
                                <i class="icon-angle-left"></i>
                            </button>
                        </div><!-- /TOGGLE-->

                        <div class="brand">
