                        </div><!-- /BRAND -->
                    </div>
                </div>
                <div class="col-lg-7 col-md-7 col-6 d-flex align-items-center justify-content-end">
                    <div class="header-right">
                        <div class="info">
                            <partial name="_LoginPartial" />
                        </div><!-- /INFO-->
                    </div>
                </div>
            </div><!--ROW-->
        </div><!--CONTAINER-->
    </header>
    <!-- / HEADER
    ///////////////////////////////////////////////////////////////////// -->
    <!-- ASIDE
    ///////////////////////////////////////////////////////////////////// -->
    <aside class="sidebar-nav-wrapper card-style">
        <div class="sidebar-nav-scroll">
            <nav class="sidebar-nav">
                <ul>

                    <!-- nav-1 -->
                    <li class="@(ViewData["Title"] == "Αρχική" ? "nav-item active" : "nav-item")">
                        <a class="@(ViewData["Title"]=="Αρχική" ? "nav-link active" : "nav-link")" asp-controller="Home" asp-action="Index">
                            <i class="icon-home"></i>
                            <span class="text">Αρχική</span>
                        </a>
                    </li>
                    <!-- /nav-1 -->
                    @if (ViewContext.HttpContext.User.Claims.Any(x => x.Type == "IsAdmin" && x.Value == "true"))
                    {
                        <!-- nav-2 -->
                        <li class="@(ViewData["Title"] == "Είδη" ? "nav-item active" : "nav-item")">
                            <a class="@(ViewData["Title"]=="Είδη" ? "nav-link active" : "nav-link")" asp-controller="fieldproducts" asp-action="Index">
                                <i class="icon-items"></i>
                                <span class="text">Είδη</span>
                            </a>
                        </li>
                        <!-- /nav-2 -->
                        <!-- nav-3 -->
                        <li class="@(ViewData["Title"] == "Είδη/Κατάστημα" ? "nav-item active" : "nav-item")">
                            <a class="@(ViewData["Title"]=="Είδη/Κατάστημα" ? "nav-link active" : "nav-link")" asp-controller="fieldproductstores" asp-action="Index">
                                <i class="icon-shopping-cart"></i>
                                <span class="text">Είδη/Κατάστημα</span>
                            </a>
                        </li>
                        <!-- /nav-3 -->
                        <!-- nav-4 -->
                        <li class="@(ViewData["Title"] == "Διατροφικά Χαρακτηριστικά" ? "nav-item active" : "nav-item")">
                            <a class="@(ViewData["Title"]=="Διατροφικά Χαρακτηριστικά" ? "nav-link active" : "nav-link")" asp-controller="Nutritions" asp-action="Index">
                                <i class="icon-characteristics"></i>
                                <span class="text">Διατροφικά Χαρακτηριστικά</span>
                            </a>
                        </li>
                        <li class="@(ViewData["Title"] == "StaticExport" ? "nav-item active" : "nav-item")">
                            <a class="@(ViewData["Title"]=="StaticExport" ? "nav-link active" : "nav-link")" asp-controller="StaticExport" asp-action="Index">
                                <i class="icon-minus"></i>
                                Εξαγωγή αρχείου
                            </a>
                        </li>
                        <!-- /nav-4 -->
                        <!-- nav-4 -->
                        <li class="nav-item">
                            <hr class="separator separator-horizontal width-80 margin-auto mt-20 mb-20">
                        </li>
                        <!-- /nav-4 -->
                        <!-- nav-5 -->
                        <li class="nav-item nav-item-has-children">

                            <a href="/" class="collapsed" data-bs-toggle="collapse" data-bs-target="#ddmenu_4" aria-controls="ddmenu_4" aria-expanded="false" aria-label="Toggle navigation">
                                <i class="icon-settings"></i>
                                <span class="text">Διαχείριση </span>
                            </a>

                            <ul id="ddmenu_4" class="collapse show dropdown-nav">

                                <li>
                                    <a class="@(ViewData["Title"]=="Καταστήματα" ? "nav-link active" : "nav-link")" asp-controller="stores" asp-action="">
                                        <i class="icon-minus"></i>
                                        Καταστήματα
                                    </a>
                                </li>

                                @* <li>
                            <a href="/">
                            <i class="icon-minus"></i>
                            Παραμετρικά Πεδία
                            </a>
                            </li>*@

                                <li>
                                    <a class="@(ViewData["Title"]=="Κατηγορίες" ? "nav-link active" : "nav-link")" asp-controller="Categories" asp-action="">
                                        <i class="icon-minus"></i>
                                        Κατηγορίες
                                    </a>
                                </li>

                                @* <li>
                            <a class="@(ViewData["Title"]=="Import" ? "nav-link active" : "nav-link")" asp-controller="Import" asp-action="">
                            <i class="icon-minus"></i>
                            Εισαγωγή αρχείου
                            </a>
                            </li>*@



                            </ul>

                        </li>
                        <!-- /nav-5 -->
                    }


                </ul>
            </nav><!-- /NAVIGATION -->





        </div>

    </aside>
    <!-- / ASIDE
    ///////////////////////////////////////////////////////////////////// -->


    <div class="overlay"></div>



    <!-- MAIN
    ///////////////////////////////////////////////////////////////////// -->


    <main class="main-wrapper">




        <section class="table-components">
            <div class="container-fluid">
                <div class="tables-wrapper">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="card-style">

                                <!-- / CARD CONTENT
                                ///////////////////////////////////////////////////////////////////// -->
                                @RenderBody()
                                <!-- / CARD CONTENT
                                ///////////////////////////////////////////////////////////////////// -->


                            </div><!--/card-style-->
                        </div><!--/col-->
                    </div><!--/row-->
                </div><!--/tables-wrapper-->
            </div><!--/container-->
        </section><!--/table-->





    </main>




    <!-- /MAIN
    ///////////////////////////////////////////////////////////////////// -->
    <!-- FOOTER
    ///////////////////////////////////////////////////////////////////// -->
    <footer class="footer">
        <div class="container-fluid">
            <div class="row mb-10">
                <div class="col-md-6 order-last order-md-first">
                    <div class="copyright text-center text-md-start">
                        <p class="text-sm text-center ml-50">

                        </p>
                    </div>
                </div><!--/COL-->
                <div class="col-md-6">
                    <div class=" terms d-flex justify-content-center justify-content-md-end">
                        <a href="#0" class="text-sm mr-40">
                            Σκλαβενίτης © <script>document.write(new Date().getFullYear())</script>
                            <span id="year"></span> / Διαχείρηση Ηλεκτρονικών Συλλογών
                        </a>
                    </div>
                </div>
            </div><!--/ROW -->
        </div><!--/CONTAINER -->
    </footer>
    <!-- /FOOTER
    ///////////////////////////////////////////////////////////////////// -->



    <script type="text/javascript" src="~/js/popper.min.js"></script>

    <script type="text/javascript" src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>


    <!-- Scripts -->
    <script src="~/js/skeleton/lib/gridviewscroll.js"></script>
    <script src="~/js/skeleton/lib/jeditable.js"></script>
    <script src="~/js/skeleton/lib/mvc-grid.js"></script>
    <script src="~/js/skeleton/lib/inline-edit.js"></script>
    <script src="~/js/skeleton/lib/select-2-4.1.js"></script>

    <!-- <script src="~/js/bootstrap5-1-3.bundle.min.js"></script> -->
    <script src="~/js/skeleton/app.js"></script>





    <script>
        [].forEach.call(document.getElementsByClassName('mvc-grid'), function (element) {
            new MvcGrid(element);
        });
    </script>

    <script>
        $(document).ready(function () {
            // When a navigation tab is clicked
            $(".nav-item").on("click", function () {
                $.post('/Basket/ClearSession', function (data) {
                    
                });
            });
        });
    </script>



    @await RenderSectionAsync("scripts", required: false)
    @await RenderSectionAsync("ControlsSection", required: false)








</body>
</html>